<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body>
    <% include ../partials/header.ejs %>

    <p><% include ../partials/collectionNavigation.ejs %></p>

    <p>
        <table width="300">
            <tr>
                <td align="right" colspan="2">
                    <a href="/collections/movies/create" /><i class="fa fa-plus-square fa-lg"></i></a>
                </td>
            </tr>
            <% movies.forEach(function(item) { %>
            <tr>
                <td width="110">Title:</td><td><%= item.title %></td>
            </tr>
            <tr>
                <td>Genre:</td><td><%= item.genre %></td>
            </tr>
            <tr>
                <td>Rating:</td><td><%= item.rating %></td>
            </tr>
            <tr>
                <td>Running Time:</td><td><%= item.runningTime %></td>
            </tr>
            <tr>
                <td>Review:</td><td><%= item.review %></td>
            </tr>
        <tr>
            <td align="right" colspan="2">
                <a href="/collections/movies/<%= item._id %>" /><i class="fa fa-pencil-square-o fa-lg"></i></a> |
                <a href="/collections/movies/delete/<%= item._id %>" /><i class="fa fa-times fa-lg"></i></a>
                <hr size='1'>
            </td>
        </tr>
            <% }) %>
        </table>
    </p>

</body>
</html>